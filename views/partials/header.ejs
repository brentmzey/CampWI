<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Poppins:wght@400;700&display=swap"
        rel="stylesheet">
    <!-- Minified Bootstrap v 3.3.7 -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css -->
    <!-- Font Awesome 6 Core CSS -->
    <link rel="stylesheet" href="/css/css/fontawesome.css">
    <!-- Font Awesome 6 Solid Icons -->
    <link rel="stylesheet" href="/css/css/solid.css">
    <!-- Personal CSS File -->
    <link rel="stylesheet" href="/stylesheets/main.css">
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CampWI</title>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" id="mainNavbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a id="navbar-brand" class="navbar-brand" href="/">CampWI <i class="fas fa-tree"></i></a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a
                            href="/campgrounds"><i class="fas fa-campground"></i> All Campgrounds</a></li>
                </ul>
                <ul id='navbar-right' class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"><a
                            href="/login"><i class="fas fa-user-secret"></i></i> Howdy, stranger. LOGIN HERE!</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"><a
                            href="/register">Sign Up <i class="fas fa-user-plus"></i></a></li>
                    <% } else { %>
                    <li class="nav-item"><a href="#"><i class="fas fa-user"></i> Signed In As
                            <%= currentUser.username %>
                            <% if (currentUser && currentUser.isAdmin) { %>
                            (Admin)
                            <% } %>
                        </a>
                    </li>
                    <li class="nav-item"><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Bootstrap alerts -->
    <!-- Error -->
    <% if (error && error.length > 0) { %>
    <div class="container">
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    </div>
    <% } %>
    <% if (success && success.length > 0) { %>
    <!-- Success -->
    <div class="container">
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    </div>
    <% } %>