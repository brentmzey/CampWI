<%- include("./partials/header") %>

<div class="row">
    <div class="container">
        <h1 class="text-center login-header">Login Here!</h1>
        <div class="container login-container">
            <form action="/login" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Username" aria-label="username"
                        required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Password"
                        aria-label="password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-block">Login <i class="fas fa-sign-in-alt"></i></button>
                </div>
            </form>
            <button class="btn btn-xs"><a href="/campgrounds"><i class="fas fa-hand-point-left"></i> Back to all
                    Campgrounds</a></button>
            <button class="btn btn-sm"><a href="/forgot">Forgot your password?</a></button>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>