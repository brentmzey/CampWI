<%- include("../partials/header") %>

<div class="wrapper">
    <div class="row edit-campground-page-top campground-edit-first-row">
        <div class="card campground-edit-card">
            <div class="card-body form-row align-items-center justify-content-center">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <h1 class="campground-edit-header text-center pb-2">Edit <strong><%= campground.name %></strong>
                    </h1>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <div class="form-inline">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="dollar-sign-addon">$</span>
                                </div>
                                <input class="form-control" type="number" name="campground[price]"
                                    value="<%= campground.price %>" min="0.01" step="0.01">
                                <div class="input-group-append">
                                    <span class="input-group-text" id="per-night-price-addon">/NIGHT</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]"
                            value="<%= campground.image %>">
                    </div>
                    <div class=" form-group">
                        <textarea class="form-control"
                            name="campground[description]"><%= campground.description %></textarea>
                    </div>
                    <div class=" form-group">
                        <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                    </div>
                </form>
                <div class="row align-items-center justify-content-start mt-4">
                    <a class="btn btn-sm" href="/campgrounds/<%= campground._id %>"><i
                            class="fas fa-hand-point-left"></i>
                        Cancel changes and go back
                    </a>
                </div>
            </div>
            <div class="card-heading"
                style="background: url(<%= campground.image %>) top left/cover no-repeat; width: 29.1%; display: table-cell;">
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>